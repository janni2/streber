{
    "name": "streber/streber",
    "description": "A work-tracking and note-taking web application",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.3",
        "ext-mysqli": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Streber\\": "src/"
        },
        "files": [
            "std/common.inc.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Streber\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
    }
}